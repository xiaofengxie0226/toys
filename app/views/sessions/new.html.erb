<h1>User login</h1>

<div class="row">
  <div class="col-sm-4">
    <%= form_tag sessions_path, method: "post",remote: true, class: "signin_form" do %>
      <div class="form-group">
        <%= text_field_tag :username,nil,class: "form-controll", placeholder: "username..."%>
      </div>
      <div class="form-group">
        <%= password_field_tag :password,nil,class: "form-controll", placeholder: "password..."%>
      </div>
      <%= submit_tag 'login',class: "btn btn-primary"%>
      <%= link_to "signup", new_user_path %>
    <% end %>
  </div>
  <div class="col-sm-8">
  </div>
</div>

<%= content_for :javascripts do %>
  <script type="text/javascript">
    $('.signin_form').on('ajax:success', function(event, data) {
      if (data.status == 'ok') {
        window.location.href = data.msg.redirect_url;
      } else {
        alert(data.msg);
      }
    })
  </script>
<% end -%>